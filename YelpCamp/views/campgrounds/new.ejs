<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">
            New Campground
        </h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" id="title" type="text" name="campground[title]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" id="location" type="text" name="campground[location]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" id="image" type="text" name="campground[image]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" id="description" type="text"
                        name="campground[description]"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price">$</span>
                        <input id="price" type="number" name="campground[price]" class="form-control"
                            aria-label="price">
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Add Campground</button>
                </div>
            </form>
        </div>
    </div>
    <a href="/campgrounds">All Campgrounds</a>